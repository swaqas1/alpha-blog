<%=render 'shared/errors' ,obj:@article %>



<div class="row">
  <div class="col-xs-12">
     <%= form_for @article,:html => {class:"form-horizontal " , role: "form"}  do |z| %>
       
      <div class="form-group">
        <div class="label-control col-sm-2">
          <%= z.label :title%>
          
        </div>
        <div class="col-sm-8">
          
          <%= z.text_field :title ,class:"form-control", placeholder:"Please enter title here" ,autofocus:true %>
      </div>
    </div>
        <div class="form-group">
      <div class="label-control col-sm-2">
          <%= z.label :description%> 
        </div>
 
       <div class="col-sm-8">
          <%= z.text_area :description ,rows:10 , class:"form-control",placeholder:"Please enter the description here" %>
          </div>
    </div>

      <div class="form-group">
        <div class=" col-sm-10 col-sm-offset-2">
        <%= z.submit class:"btn btn-primary btn-lg"%>
        </div>
    </div>
 

      <%end %>
<div class=" col-sm-5 col-sm-offset-5">
     [ <%=link_to "Cancel the job | Return back to Artices",articles_path%> ]
    </div>
</div>
</div> 
    

    


